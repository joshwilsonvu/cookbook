---
import { twMerge } from "tailwind-merge";

interface Props {
  class?: string;
  containerClass?: string;
}
---

<article
  class={twMerge(
    "PrintPage web:w-[7.5in] web:h-[9.25in] web:my-[0.25in] web:mx-auto web:p-[0.5in] print:h-[8.25in] print:flex print:flex-col overflow-hidden web:overflow-visible break-before-page bg-white web:paper-shadow",
    Astro.props.class,
  )}
>
  <slot />
</article>
<style>
  @reference "../styles/global.css";
  /* simulate alternating page margins and add an indicator for the book's spine */
  @media screen {
    .PrintPage:nth-of-type(2n + 1) {
      @apply pl-[0.75in];
      box-shadow: -8px 0 2px var(--color-gray-400);
    }
    .PrintPage:nth-of-type(2n) {
      @apply pr-[0.75in];
      box-shadow: 8px 0 2px var(--color-gray-400);
    }
  }
</style>
